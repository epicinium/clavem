{
    "name": "@epicinium/clavem",
    "version": "1.0.0-rc.0",
    "description": "An implementation of Ed25519 by SUPERCOP ref10.",
    "homepage": "https://github.com/epicinium/clavem",
    "bugs": {
        "url": "https://github.com/epicinium/clavem/issues"
    },
    "license": "MIT",
    "author": {
        "name": "Yongbin Min",
        "email": "contact@cichol.com"
    },
    "main": "releases/index.js",
    "types": "clavem.d.ts",
    "directories": {
        "lib": "releases",
        "test": "tests"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/epicinium/clavem.git"
    },
    "scripts": {
        "build": "if [ \"$NODE_ENV\" = \"production\" ]; then npm run build:prod; else npm run build:dev; fi",
        "build:dev": "NODE_ENV=development npm run compile",
        "build:prod": "NODE_ENV=production npm run compile",
        "compile": "npm run compile:babel && npm run compile:emscripten",
        "compile:babel": "npx babel sources --out-dir releases --delete-dir-on-start",
        "compile:emscripten": "emcc -Os sources/ed25519.c -o releases/binary.js -s EXPORTED_FUNCTIONS='[\"_malloc\", \"_free\"]' -std=gnu11",
        "postcompile": "if [ \"$NODE_ENV\" = \"production\" ]; then npm run minify:prod; else npm run minify:dev; fi",
        "minify:dev": "find releases -iname \"*.js\" -exec sh -c \"npx terser --toplevel --compress --beautify --output {} -- {}\" \\;",
        "minify:prod": "find releases -iname \"*.js\" -exec sh -c \"npx terser --toplevel --compress passes=2 --mangle --output {} -- {}\" \\;",
        "test": "npm run test:eslint && npm run test:mocha",
        "test:eslint": "npx eslint .",
        "test:mocha": "npx mocha tests --reporter list"
    },
    "dependencies": {
        "@babel/runtime": "^7.1.2",
        "bluebird": "^3.5.2"
    },
    "devDependencies": {
        "@babel/cli": "^7.1.2",
        "@babel/core": "^7.1.2",
        "@babel/plugin-transform-async-to-generator": "^7.1.0",
        "@babel/plugin-transform-runtime": "^7.1.0",
        "@babel/preset-env": "^7.1.0",
        "babel-eslint": "^10.0.1",
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "eslint": "^5.8.0",
        "eslint-config-airbnb-base": "^13.1.0",
        "eslint-plugin-import": "^2.14.0",
        "mocha": "^5.2.0",
        "terser": "^3.10.11"
    },
    "engines": {
        "node": "^10.13.0",
        "npm": "^6.4.1"
    },
    "publishConfig": {
        "registry": "https://registry.npmjs.org/",
        "access": "public"
    }
}
